@model authTest.Models.Putovanje

@{
    ViewData["Title"] = "Create";
}
        <h1 style="text-decoration-color: #c5e5eb;
        margin-left: 20%">
        Dodaj novu ponudu
        </h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Destinacija" class="control-label"></label>
                        <input asp-for="Destinacija" class="form-control" />
                        <span asp-validation-for="Destinacija" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Slika" class="control-label"></label>
                        <input asp-for="Slika" class="form-control" />
                        <span asp-validation-for="Slika" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Info" class="control-label"></label>
                        <input asp-for="Info" class="form-control" />
                        <span asp-validation-for="Info" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Aktuelno" /> @Html.DisplayNameFor(model => model.Aktuelno)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="DatumPolaska" class="control-label"></label>
                        <input asp-for="DatumPolaska" class="form-control" />
                        <span asp-validation-for="DatumPolaska" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DatumPovratka" class="control-label"></label>
                        <input asp-for="DatumPovratka" class="form-control" />
                        <span asp-validation-for="DatumPovratka" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MinBrojLjudi" class="control-label">Minimalan broj putnika</label>
                        <input asp-for="MinBrojLjudi" class="form-control" />
                        <span asp-validation-for="MinBrojLjudi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaxBrojLjudi" class="control-label">Maksimalan broj putnika</label>
                        <input asp-for="MaxBrojLjudi" class="form-control" />
                        <span asp-validation-for="MaxBrojLjudi" class="text-danger"></span>
                    </div>
                    <div>
                        <label></label>
                        <label class="control-label">Cijena</label>
                        <label></label>
                        <input class="form-control"
                               id="Cijena"
                               name="Cijena"
                               type="text"
                               value="" />
                        <label></label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Sačuvaj" class="btn btn-info" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a style="margin-left:20%" asp-action="Index">Odustani</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
