@model IEnumerable<authTest.Models.Putovanje>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Slika)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destinacija)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Info)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aktuelno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatumPolaska)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatumPovratka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinBrojLjudi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxBrojLjudi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Slika)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destinacija)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Info)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aktuelno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumPolaska)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumPovratka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinBrojLjudi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxBrojLjudi)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
