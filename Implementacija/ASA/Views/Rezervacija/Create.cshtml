@model authTest.Models.Rezervacija

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1  style="margin-left:20%;">Rezervacija putovanja</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KlijentId" class="control-label">Username</label>
                <select asp-for="KlijentId" class ="form-control" asp-items="ViewBag.KlijentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PutovanjeId" class="control-label">Destinacija</label>
                <select asp-for="PutovanjeId" class ="form-control" asp-items="ViewBag.PutovanjeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="KodId" class="control-label">Kod</label>
                <select asp-for="KodId" class ="form-control" asp-items="ViewBag.KodId"></select>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Rezerviši" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <input type="button"
           style="margin-left: 1.5%"
           class="btn btn-info"
           value="Odustani"
           onclick="location.href='/Putovanje/Index'" />
</div>

